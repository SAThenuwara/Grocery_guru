<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top bar: Back icon, Title, and Cart Icon -->
        <TextView
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Recipe Description"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="93dp"
            android:layout_height="74dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Back Icon -->
            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="63dp"
                android:layout_height="46dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_back" />


            <!-- Title -->

            <!-- Cart Icon -->

            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Cart"
                android:src="@drawable/ic_cart" />

        </LinearLayout>

        <!-- Image of Recipe -->



        <ImageView
            android:layout_width="390dp"
            android:layout_height="287dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_recipe_image"
            android:contentDescription="Recipe Image"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"/>

        <!-- Recipe Name and Level -->
        <TextView
            android:id="@+id/recipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chocolate Cake"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/recipeLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: Intermediate"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <!-- Ingredients Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Ingredient Images -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:layout_width="74dp"
                android:layout_height="70dp"
                android:contentDescription="Ingredient 1"
                android:src="@drawable/ic_egg" />

            <ImageView
                android:layout_width="74dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_milk"
                android:contentDescription="Ingredient 2"/>

            <ImageView
                android:layout_width="74dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_vanilla"
                android:contentDescription="Ingredient 3"/>

            <ImageView
                android:layout_width="74dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_cocoa"
                android:contentDescription="Ingredient 4"/>
        </LinearLayout>

        <!-- Horizontal Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#DDDDDD" />

        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <!-- Profile Icon -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile"/>

            <!-- Profile Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenny online 12 mins ago"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Second Horizontal Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#DDDDDD" />

        <!-- Instructions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="383dp"
            android:layout_height="243dp"
            android:layout_marginTop="8dp"
            android:text="1. Preheat the oven to 350Â°F.\n
2. Mix flour, sugar, and cocoa.\n
3. Add eggs, milk, and vanilla.\n
4. Pour the batter into a pan and bake.\n
5. Let the cake cool for 15 minutes.\n
6. Prepare the frosting by mixing butter, sugar, and cocoa.\n
7. Frost the cooled cake.\n
8. Garnish with sprinkles or fruit, if desired.\n
9. Slice and serve the cake."
            android:textSize="16sp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/addToListButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="Add to List"/>

            <Button
                android:id="@+id/showMoreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show More"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
