<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top bar: Back icon, Title, and Cart Icon -->
        <TextView
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Recipe Description"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="93dp"
            android:layout_height="74dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Back Icon -->
            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="63dp"
                android:layout_height="46dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_back" />


            <!-- Title -->

            <!-- Cart Icon -->

            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Cart"
                android:src="@drawable/ic_cart" />

        </LinearLayout>

        <!-- Image of Recipe -->



        <ImageView
            android:layout_width="390dp"
            android:layout_height="287dp"
            android:layout_gravity="center"
            android:src="@drawable/pepperoni_pizza"
            android:contentDescription="Recipe Image"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"/>

        <!-- Recipe Name and Level -->
        <TextView
            android:id="@+id/recipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepperoni Pizza"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/recipeLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: Intermediate"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <!-- Ingredients Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Ingredient Images -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheese"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pepperoni"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tomato"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Basil"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Horizontal Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#DDDDDD" />

        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <!-- Profile Icon -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile"/>

            <!-- Profile Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miriam online 12 hours ago"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Second Horizontal Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#DDDDDD" />

        <!-- Instructions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="383dp"
            android:layout_height="243dp"
            android:layout_marginTop="8dp"
            android:text="1. Preheat the oven to 450Â°F.\n
2. Roll out the pizza dough on a floured surface.\n
3. Spread a thin layer of pizza sauce over the dough.\n
4. Sprinkle shredded mozzarella cheese evenly on top.\n
5. Arrange pepperoni slices over the cheese.\n
6. Add additional toppings if desired (e.g., bell peppers, onions).\n
7. Bake the pizza in the preheated oven for 12-15 minutes or until the crust is golden and cheese is bubbly.\n
8. Remove from the oven and let cool for 5 minutes.\n
9. Slice and serve your homemade pepperoni pizza."
            android:textSize="16sp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/addToListButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:text="Add to List"/>

            <Button
                android:id="@+id/showMoreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show More"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
